{
  "name": "nuxt_niko_1",
  "version": "1.0.0",
  "description": "first nuxt stack project",
  "main": "index.js",
  "scripts": {
    "test": "nuxt test",
    "nuxt": "nuxt",
    "dev": "nuxt",
    "clean": "nuxt clean",
    "serve": "nuxt serve",
    "start": "nuxt start",
    "stats": "nuxt stats",
    "build": "nuxt build --modern=server",
    "generate": "nuxt generate --modern=client",
    "format": "nuxt format --write --lint '*.{md}' 'src/**/*.{js,json,scss,vue}'",
    "lint": "nuxt lint . --fix",
    "commit": "commit",
    "heroku-postbuild": "npm run build"
  },
  "author": "Nikodem Bienia",
  "license": "ISC",
  "dependencies": {
    "nuxt": "^3.4.3",
    "nuxt-stack": "^0.7.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "src/**/*.{js,vue}": [
      "nuxt format --write --lint",
      "nuxt lint --fix",
      "nuxt test --related",
      "git add"
    ],
    "src/**/*.{html,json,scss}": [
      "nuxt format --write",
      "git add"
    ],
    "*.{md}": [
      "nuxt format --write",
      "git add"
    ]
  }
}